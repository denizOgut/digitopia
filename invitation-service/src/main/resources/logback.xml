<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="PATTERN"
        value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [trace:%X{traceId:-none}] [span:%X{spanId:-none}] %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.digitopia.invitation" level="DEBUG"/>

</configuration>